  <div class='options'>
    <a data-target='supplier' onclick='toggleSection(this.dataset.target, this)'>Supplier Price List Update</a>
    <a data-target='calculator' onclick='toggleSection(this.dataset.target, this)'>Price Difference Calculator</a>
  </div>

  <!-- Supplier Section -->
  <div id='supplier' class='section'>
    <h2>Supplier Price List Update</h2>
    <form>
      <table>
        <thead>
          <tr>
            <th>Supplier</th>
            <th>Last Update</th>
            <th>Recent Update</th>
          </tr>
        </thead>
        <tbody>
          <tr><td class='supplier-cell'><input type='checkbox'> Meyer</td><td><input type='text' class='date-input' placeholder='MM/DD/YYYY'></td><td><input type='text' class='date-input' placeholder='MM/DD/YYYY'></td></tr>
